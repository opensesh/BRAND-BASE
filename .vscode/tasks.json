{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/brand-base"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:.*http://localhost:[0-9]+"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "close": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
